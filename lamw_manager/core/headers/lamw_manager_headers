#!/bin/bash

DEBUG=0
ARGS="$*"
USE_PKEXEC=0
ENTER_TO_EXIT=0
AUTO_START_LAMW4LINUX=0
CALL_BASH="bash"
EXIT_STATUS=0
LAMW_MANAGER_LOCK=/tmp/lamw_manager.lock
LAMW_MGR_INSTALL="$LAMW_MGR_CORE/core/lamw-mgr.sh"
LAMW_USER_HOME=$HOME 
LAMW_MANAGER_LOCAL_CONFIG_DIR="$LAMW_USER_HOME/.lamw_manager"
LAMW_MANAGER_LOCAL_CONFIG_PATH="$LAMW_MANAGER_LOCAL_CONFIG_DIR/local_lamw_manager.cfg"
DEFAULT_ROOT_LAMW="$LAMW_USER_HOME/LAMW"

LAMW_MANAGER_ENV=(
	LAMW_USER=$USER
	DEFAULT_ROOT_LAMW=$DEFAULT_ROOT_LAMW
	LAMW_USER_HOME=$HOME 
	LAMW_MANAGER_LOCK=$LAMW_MANAGER_LOCK
	LAMW_MANAGER_LOCAL_CONFIG_DIR=$LAMW_MANAGER_LOCAL_CONFIG_DIR
	LAMW_MANAGER_LOCAL_CONFIG_PATH=$LAMW_MANAGER_LOCAL_CONFIG_PATH
	LAMW_MANAGER_PATH=$LAMW_MGR_CORE/lamw_manager
	LAMW_USER_XDG_CURRENT_DESKTOP=${XDG_CURRENT_DESKTOP^^}
	LAMW_USER_DESKTOP_SESSION=${DESKTOP_SESSION^^}
)