#!/bin/bash
#!This script is a wraper to lamw-install.sh
if  [  "$(whoami)" = "root" ] #impede que o script seja executado pelo root 
then
	echo "Error: this version  of LAMW4Linux was designed  to run without root priveleges" >&2 # >&2 is a file descriptor to /dev/stderror
	echo "Exiting ..."
	exit 1
fi
export DEBUG=0
args=($*)
args_str=()
for((i=0;i<${#args[*]};i++))
do
	if [ "${args[i]}" = "DEBUG=1" ]; then
		export DEBUG=1
	fi
done
if [ $DEBUG = 1 ]; then
	limite=${#args[*]}
	((limite--))
	current=-1
	for((i=0;i<$limite;i++))
	do
		#current=${#args_str[*]}
		args_str[i]=${args[i]}
	done
fi

echo "$USER" > /tmp/lamw-overrides.conf
if [ -e $PWD/lamw-install.sh ]; then
	if [ $DEBUG = 1 ]; then  
		pkexec env DISPLAY=$DISPLAY XAUTHORITY=$XAUTHORITY bash -x $PWD/lamw-install.sh ${args_str[*]}
	else
		pkexec env DISPLAY=$DISPLAY XAUTHORITY=$XAUTHORITY bash $PWD/lamw-install.sh $*
	fi
else
	AUX_PATH=$0
	AUX_PATH=${AUX_PATH%/lamw-manager*} #expans√£o de variavel que remove  cg.sh restando a path
	if [ $DEBUG = 1 ]; then
		#echo "args_str=[*]=${args_str[*]}"
		#read
		pkexec env DISPLAY=$DISPLAY XAUTHORITY=$XAUTHORITY -x bash $AUX_PATH/lamw-install.sh ${args_str[*]}
	else
		pkexec env DISPLAY=$DISPLAY XAUTHORITY=$XAUTHORITY bash $AUX_PATH/lamw-install.sh $*
	fi
	true;
	echo "$AUX_PATH"
fi

if [ -e /tmp/lamw-overrides.conf ]
then
	rm /tmp/lamw-overrides.conf
fi
echo "press enter to exit ...";read